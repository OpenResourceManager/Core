{
    "swagger": "2.0",
    "info": {
        "title": "SLERP Core API",
        "description": "An API that houses ERP data, allowing open development around institutional data.",
        "contact": {
            "name": "Alex Markessinis",
            "url": "https://github.com/SLERP-ERP/SLERP_Core",
            "email": "markea125@gmail.com"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0.0"
    },
    "host": "localhost:8000",
    "basePath": "/api/v1",
    "schemes": [
        "http"
    ],
    "paths": {
        "/auth/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Authenticate with API.",
                "description": "Authenticate with the API by sending your credentials and receive a JWT in response.",
                "consumes": [
                    "application/x-www-form-urlencoded"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "username",
                        "in": "formData",
                        "description": "The API consumers username.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "password",
                        "in": "formData",
                        "description": "The API consumers password.",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of accounts",
                        "schema": {
                            "properties": {
                                "token": {
                                    "description": "Login\n\nEndpoint for credentials to be posted. Returns a JWT.",
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "security": "none"
            }
        },
        "/auth/validate": {
            "get": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Verify authenticated session.",
                "description": "Verifies the JWT token.",
                "responses": {
                    "200": {
                        "description": "Token is valid.",
                        "schema": {
                            "properties": {
                                "user": {
                                    "description": "Validate Session\n\nValidate JWT by hitting this end point.",
                                    "type": "string"
                                },
                                "message": {
                                    "description": "Validate Session\n\nValidate JWT by hitting this end point.",
                                    "type": "string"
                                },
                                "status_code": {
                                    "description": "Validate Session\n\nValidate JWT by hitting this end point.",
                                    "type": "number",
                                    "format": "int32"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/accounts": {
            "get": {
                "tags": [
                    "Accounts"
                ],
                "summary": "List accounts in a paginated format.",
                "description": "Return a paginated list of accounts.",
                "responses": {
                    "200": {
                        "description": "A list of accounts"
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "required": [
                "name",
                "email",
                "username",
                "password"
            ],
            "xml": {
                "name": "User"
            }
        }
    }
}