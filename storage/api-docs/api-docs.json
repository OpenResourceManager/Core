{
    "swagger": "2.0",
    "info": {
        "title": "SLERP Core API",
        "description": "An API that houses ERP data, allowing open development around institutional data.",
        "contact": {
            "name": "Alex Markessinis",
            "url": "https://github.com/SLERP-ERP/SLERP_Core",
            "email": "markea125@gmail.com"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0.0"
    },
    "host": "localhost:8000",
    "basePath": "/api/v1",
    "schemes": [
        "http"
    ],
    "paths": {
        "/accounts": {
            "get": {
                "tags": [
                    "Accounts"
                ],
                "summary": "list accounts",
                "description": "Return a paginated list of accounts.",
                "responses": {
                    "200": {
                        "description": "A list of accounts"
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Login to API.",
                "description": "Authenticate with the API by sending your credentials and receive a JWT in response.",
                "consumes": [
                    "application/x-www-form-urlencoded"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "username",
                        "in": "formData",
                        "description": "The API consumers username.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "password",
                        "in": "formData",
                        "description": "The API consumers password.",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of accounts"
                    }
                },
                "security": "none"
            }
        },
        "/auth/validate": {
            "get": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Verify Session",
                "description": "Verifies the JWT token.",
                "responses": {
                    "200": {
                        "description": "Token is valid."
                    }
                }
            }
        }
    },
    "definitions": {
        "Account": {
            "required": [
                "identifier",
                "username",
                "name_first",
                "name_last",
                "primary_duty"
            ],
            "xml": {
                "name": "Account"
            }
        },
        "User": {
            "required": [
                "name",
                "email",
                "username",
                "password"
            ],
            "xml": {
                "name": "User"
            }
        }
    }
}