        "/auth/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Authenticate with API.",
                "description": "Authenticate with the API by sending your credentials and receive a JWT in response.",
                "consumes": [
                    "application/x-www-form-urlencoded"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "username",
                        "in": "formData",
                        "description": "The API consumers username.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "password",
                        "in": "formData",
                        "description": "The API consumers password.",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of accounts",
                        "headers": {
                            "X-RateLimit-Limit": {
                                "description": "The number of allowed requests in the current period",
                                "type": "integer"
                            },
                            "X-RateLimit-Remaining": {
                                "description": "The number of remaining requests in the current period",
                                "type": "integer"
                            }
                        },
                        "schema": {
                            "properties": {
                                "token": {
                                    "description": "Login\n\nEndpoint for credentials to be posted. Returns a JWT.",
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "401": {
                        "$ref": "#/responses/401"
                    },
                    "429": {
                        "$ref": "#/responses/429"
                    }
                },
                "security": []
            }
        },
        "/auth/validate": {
            "get": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Verify authenticated session.",
                "description": "Verifies the JWT token.",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "202": {
                        "description": "Token is valid.",
                        "headers": {
                            "X-RateLimit-Limit": {
                                "description": "The number of allowed requests in the current period",
                                "type": "integer"
                            },
                            "X-RateLimit-Remaining": {
                                "description": "The number of remaining requests in the current period",
                                "type": "integer"
                            }
                        },
                        "schema": {
                            "properties": {
                                "user": {
                                    "description": "The authenticated server.",
